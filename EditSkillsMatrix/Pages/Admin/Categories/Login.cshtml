@page 
@model EditSkillsMatrix.Pages.Admin.Categories.LoginModel
@{
       ViewData["Title"] = "Name and Team";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div>
<h1 style="color:HighlightText; color:lawngreen;font-family:Consolas">Edit Skills Matrix</h1>
<br />  
</div>  
<div>
<p style="font-family:Consolas; color:darkorange;"><b>Radio Button Key: </b> <br />1 is the lowest score, and 5 is the highest rated / score</p>
</div>

 <form asp-action="Submit" asp-controller="Login">


    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group form-group-inline">
        <label asp-for="Answers.User">Choose or Add your Name</label>
    </div>
    <div class="col-9">
        <select asp-for="Answers.User" asp-items="@(new SelectList(Model.UserLists,"Name","Name"))" class="form-select">
            <option selected disabled value="">Choose or Add your Name</option>

        </select>
        <span asp-validation-for="Answers.User" class="text-danger"></span>
        <input hidden asp-for="Answers.Value" />
        <input hidden asp-for="Answers.TeamId" value="@Model.Teams.First().TeamId" />
    </div> <br />


    <div class="form-group form-group-inline">
                    <label asp-for="Answers.TeamName">Choose your Team and Skills Matrix</label>
                    </div> 
                 <div class="col-9"> 
           <select asp-for="Answers.TeamName" asp-items="@(new SelectList(Model.Teams,"TeamName","TeamName"))" class="form-select">
    <option selected disabled value="">Choose your Team or the applicable Skills Matrix Question Set</option>
     
           </select>
            <span asp-validation-for="Answers.TeamName" class="text-danger"></span>
            <input hidden asp-for="Answers.Value" />
             <input hidden asp-for="Answers.TeamId" value="@Model.Teams.First().TeamId"/>
            </div>  
          <br />  
          <div><span>
           <button type="submit" class="btn btn-warning" style="width:280px;">
            <i class="bi bi-joystick">&nbsp;&nbsp;</i>Complete the Skills Matrix Questions</button>
    <br /><br/>
    <a asp-page="/Users/Create" class="btn btn-success" style="float: left">
        <i class="bi bi-tree"></i> My name is not in the list?!!  <i class="bi bi-back"></i>
            </a>
        </span>
        </div>


</form>



