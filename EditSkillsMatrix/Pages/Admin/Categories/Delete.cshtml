@page
@model EditSkillsMatrix.Pages.Admin.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 style="color:HighlightText; color:lawngreen;font-family:Consolas">Delete a Question</h2>
            <hr />
            </div>
        </div>
        
        <div class="mb-3"> 
            <label asp-for="Category.Question">Question</label>
            <div class="col-3"> 
            <input asp-for="Category.Question" disabled class="form-control" placeholder="" readonly/>
           </div>
            </div>
               <div class="mb-3"> 
            <label asp-for="Category.Skill">Answer or Note</label>
            <div class="col-3"> 
            <input asp-for="Category.Skill" disabled class="form-control" placeholder="" readonly/>
           
            </div>
                     <div class="mb-3"> 
            <label asp-for="Category.Team">Assigned to</label>
            <div class="col-3"> 
            <input asp-for="Category.Team" disabled class="form-control" placeholder="" readonly/>
           
            </div>
        </div>
           <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <div class="col-3">
            <input asp-for="Category.DisplayOrder" disabled class="form-control" placeholder=""/>
           
        </div>
        <button type="submit" class="btn btn-warning" style="width:180px;">
            <i class="bi bi-cloud-snow">&nbsp;&nbsp;</i>DELETE</button>
            <a asp-page="Index" class="btn btn-primary" style="width:180px;">
            <i class="bi bi-emoji-heart-eyes">&nbsp;&nbsp;</i>Back to List</a>

    </div>
</form>


@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial.cshtml" />
    }
}