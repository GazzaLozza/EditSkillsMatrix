@page
@model EditSkillsMatrix.Pages.TeamAdd.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:HighlightText; color:lawngreen;font-family:Consolas">Edit</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Teams.Id" />
            <div class="form-group">
                <label asp-for="Teams.TeamName" class="control-label"></label>
                <input asp-for="Teams.TeamName" class="form-control" />
                <span asp-validation-for="Teams.TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teams.Value" class="control-label"></label>
                <input asp-for="Teams.Value" class="form-control" />
                <span asp-validation-for="Teams.Value" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
            <input type="submit" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="./Index" class="btn btn-warning"><i class="bi bi-lightning">  </i>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
