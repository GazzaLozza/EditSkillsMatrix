@page
@model EditSkillsMatrix.Pages.TeamAdd.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:HighlightText; color:lawngreen;font-family:Consolas">Add or Remove a Team</h1>

<p>
    <a asp-page="Create"class="btn btn-success mx-2"><i class="bi bi-pencil"> </i>Create New Team</a>
</p>
 <table class="table table-bordered table-striped table-secondary">
        <thead class="table-primary" style="font-size:18px">
  
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teams[0].TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teams[0].Value)
            </th>
            
                   <th style="text-align:center">
                    Edit / Delete
                </th>
        </tr>
    </thead>
    <tbody style="font-size:18px">
@foreach (var item in Model.Teams) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td style="text-align:center">
               
                <div class="btn btn-group" role="group" >
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i>
                        </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-warning mx-2"><i class="bi bi-trash3"></i>
                        </a>
                </div>
       
            </td>
        </tr>
}
    </tbody>
</table>
